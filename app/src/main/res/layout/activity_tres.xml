<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoisActivity"
    android:background="@color/cinza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/amarelo"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgVoltar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:layout_marginLeft="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trabalho"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textColor="@color/azul_escuro"
                android:layout_marginRight="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="32dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="20dp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/empresa"
                        android:scaleType="centerCrop"/>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="32dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:backgroundTint="@color/amarelo">

                        <ImageView
                            android:alpha="0.7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/chamoulimpou"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chamou Limpou"
                            android:textColor="@color/azul_escuro"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="24sp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>




    </LinearLayout>


</ScrollView>